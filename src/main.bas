1500 PLAYER(1) = X : PLAYER(2) = Y : PLAYER(3) = A
1600 A$ = CHR$(160) : REM THE CHARACTER CODE READ BY THE ROUTINE BUT AS STRING
1700 M$ = CHR$(27) + CHR$(15) : REM TURN SPECIAL CHARACTERS ON (80COL CARD CHARS)
1800 N$ = CHR$(24) + CHR$(14) : REM TURN SPECIAL CHARACTERS OFF
1900 ST$ = ""

2000 REM LOADING THE DATA BY READING THE TEXT FILE (NOT USING BECAUSE IS VERY SLOW)
2100 REM ONERR GOTO 2600 : REM OPEN AND READ A TEXT FILE, SAVING THE DATA IN AN ARRAY (LINES$)
2200 HTAB(50) : VTAB(16)
2250 PRINT M$;"I";N$
2300 HTAB(50) : PRINT M$;"C";N$;" Preparing ";M$;"Z";
2400 FOR P = 1 TO Z
2500 PRINT "\\";
2600 NEXT P
2700 PRINT "_";N$;
2800 HTAB(62) : PRINT M$;" ";N$; : PRINT D$;"OPEN ENCOUNTER"
2900 PRINT M$;" ";N$; : PRINT D$;"READ ENCOUNTER"
3000 INPUT L : REM GET THE TOTAL LINES OF THE TEXT FILE (FIRST PARAMETER FROM TEXT FILE)
3100 PRINT M$;" ";N$; : INPUT H : REM HTAB(H) : REM GET LEFT OFFSET WHEN INSERTING THE TEXT (SECOND PARAMETER FROM TEXT FILE)
3200 INPUT V : REM VTAB(V) : REM GET TOP OFFSET WHEN INSERTING THE TEXT (THIRD PARAMETER FROM TEXT FILE)
3300 PRINT M$;" ";N$; : INPUT A$ : REM GET THE NEXT DATA ROW
3400 LINES$(I) = A$ : I = I + 1 : REM SAVE IT
3500 IF I > L THEN GOTO 3700
3600 GOTO 3300 : REM LOOP
3700 PRINT M$;" ";N$; : PRINT " ";M$;"D";N$ : HTAB(50) : PRINT M$;"I";N$ : PRINT D$;"CLOSE"

3800 REM UPDATING THE DATA IN PLACE
3900 HTAB(50) : PRINT M$;"C";N$;" Buffering";M$;"Z";
4000 FOR P = 1 TO Z + 4
4100 PRINT "\\";
4200 NEXT P
4300 PRINT "_";N$;
4400 HTAB(62)
4500 PRINT M$;"   ";N$;
4600 FOR I = 1 TO L
4700   NE$ = ""
4800   A$ = LINES$(I) : M = LEN(A$) : D = 1
4900   FOR XI = 1 TO M
5000     B$ = MID$(A$, XI, 1)
5100     C = ASC(B$)
5200     IF C = 123 THEN NE$ = NE$ + M$ : GOTO 6000 : REM TURN MOUSE TEXT ON WITH TRIGGER: "{"
5300     IF C = 125 THEN NE$ = NE$ + N$ : GOTO 6000 : REM TURN MOUSE TEXT OFF WITH TRIGGER: "}"
5400     IF C = 91 THEN NE$ = NE$ + CHR$(15) : GOTO 6000 : REM TURN INVERSE ON WITH TRIGGER: "["
5500     IF C = 93 THEN NE$ = NE$ + CHR$(14) : GOTO 6000 : REM TURN INVERSE OFF WITH TRIGGER: "]"
5600     IF C = 59 THEN NE$ = NE$ + "\\" : GOTO 6000 : REM TYPE IN BETWEEN VERTICAL SPACE WITH TRIGGER: ";"
5700     IF C = 96 THEN NE$ = NE$ + ":" : GOTO 6000 : REM TYPE TWO DOTS PUNCTUATION ":" WITH TRIGGER: "`"
5800     IF C < 125 THEN NE$ = NE$ + B$ : REM WILL PRINT THE REQUESTED LETTER
5900     IF C = 126 THEN NE$ = NE$ + N$ + " " : REM SPACE INTERPRETATION: "~"
6000   NEXT XI
6100   LINES$(I) = NE$ : PRINT M$;" ";N$;
6200 NEXT I
6300 PRINT M$;" ";N$; : PRINT " ";M$;"D";N$

6400 REM PRINTING THE DATA ON SCREEN
6500 FOR I = 1 TO Z
6600    HTAB(H) : VTAB (V + I)
6700    ? LINES$(I)
